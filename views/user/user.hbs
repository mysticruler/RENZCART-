 <!--Main layout-->
<main>
<br><br>
<div class="container">

  
<!-- Products -->
<p style="font-size: xx-large;">NEW PRODUCTS</p>
  <section>
  <div class="text-center">
    <div class="row">
      {{#each useritems}}
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
            <img src="images/{{this.image}}" class="w-100" style="height: 300px;" />
          </div>
          
          <div class="card-body">
            <a href="/item/{{this._id}}" class="text-reset">
              <h5 class="card-title mb-2">{{this.productname}}</h5>
            </a>
            <a href="" class="text-reset ">
            </a>
            <h6 class="mb-3 price">â‚¹{{this.price}}</h6>
            <h6>{{this.description}}</h6>
          </div>
        </div>
      </div>
      {{/each}}
<br>
{{!-- //ALL CATEGORY// --}}
<p id="allcate" style="font-size: xx-large" >ALL CATEGORY </p>

  <div class="text-center">
    <div class="row">
      {{#each usercata}}
      <div class="col-lg-3 col-md-6 mb-4">
        <a href="" class="text-reset">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
            <br><br>
            <img src="images/{{this.image}}" class="w-100" style="height: 300px;">
          </div>
          <br><br>
          <div class="card-body">
            
              <h5 class="card-title mb-2">{{this.category}}</h5>
              <h5 >{{this.description}}</h5>
            </a>
          </div>
        </div>
      </div>
      {{/each}}

      
</section>
   
</div>
</main>

